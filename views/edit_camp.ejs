<% include partials/header %>

<div class="container text-center">
  <div class="row">



          <h1>Edit your campground</h1>
      <div style="width: 35%; margin: 0 auto; display: block; padding-top: 35px;">
      <form action="/campgrounds/<%=campID._id%>/edit?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" name="name" class="form-control" value="<%=campID.name%>" required="required">
        </div>

        <div class="form-group">
            <input type="url" name="photo" class="form-control" value="<%= campID.photo%>" required="required">
        </div>

        <div class="form-group">
            <input type="textarea" name="description" class="form-control" value="<%=campID.description%>" required="required">
        </div>

        <div class="form-group">
            <input type="number" name="price" class="form-control" value="<%=campID.price%>" required="required">
        </div>

        <div class="form-group">
          <input type="submit" value="Update campground" class="btn btn-primary btn-block">
        </div>

      </form>
      </div>
    </div>
  </div>




<% include partials/footer %>
